[flake8]
# Flake8 Configuration for BiteSnap

# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules,
    migrations,
    static,
    media,
    frontend

# Ignore specific errors/warnings
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (outdated)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Show source code for each error
show-source = True

# Show pep8 error name
show-pep8 = True

# Count the number of errors
count = True

# Print total number of errors
statistics = True

# Specify target Python version
python-version = 3.9

